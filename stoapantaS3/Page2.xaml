<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="stoapantaS3.Page2">

    <!--ESTILO EXPLICITO-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="labelStyle" TargetType="Label">
                <Setter Property = "TextColor" Value="Fuchsia" />
                <Setter Property = "FontSize"  Value="20" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Style="{StaticResource stackLayoutStyle}">
            <Label Text="Ventana Estilo 2" />

            <Label x:Name="lblDatoUno" Style="{StaticResource labelStyle}"/>
            <Label x:Name="lblDatoDos" Style="{StaticResource labelStyle}"/>

            <Button x:Name="btnAbrir" Text="Abri Ventana 3" Clicked="btnAbrir_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>